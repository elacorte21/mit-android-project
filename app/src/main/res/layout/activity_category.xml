<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CategoryActivity">

    <LinearLayout
        android:id="@+id/cat_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/orange_200"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="24dp"
            android:text="Action &amp; Adventure"
            android:textSize="32sp"
            android:textColor="@color/white" />

        <androidx.cardview.widget.CardView
            android:id="@+id/link_game_1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="18dp"
            android:onClick="viewGame">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/action1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Fortnite"
                android:textSize="18sp"
                android:textColor="@color/orange_500"
                android:background="@color/white"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/link_game_2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="18dp"
            android:onClick="viewGame">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/action2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Grand Theft Auto"
                android:textSize="18sp"
                android:textColor="@color/orange_500"
                android:background="@color/white"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <!-- End of Category 1 -->

    <LinearLayout
        android:id="@+id/cat_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/teal_200"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="24dp"
            android:text="Racing"
            android:textSize="40sp"
            android:textColor="@color/white" />

        <androidx.cardview.widget.CardView
            android:id="@+id/link_game_3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="18dp"
            android:onClick="viewGame">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/racing1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Need for Speed™ Heat"
                android:textSize="18sp"
                android:textColor="@color/teal_700"
                android:background="@color/white"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/link_game_4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="18dp"
            android:onClick="viewGame">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/racing2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Crash Team Racing™ Nitro-Fuelled"
                android:textSize="18sp"
                android:textColor="@color/teal_700"
                android:background="@color/white"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <!-- End of Category 2 -->

    <LinearLayout
        android:id="@+id/cat_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/lime_500"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="24dp"
            android:text="Sports"
            android:textSize="40sp"
            android:textColor="@color/white" />

        <androidx.cardview.widget.CardView
            android:id="@+id/link_game_5"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="18dp"
            android:onClick="viewGame">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/sports1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="NBA 2K21"
                android:textSize="18sp"
                android:textColor="@color/lime_500"
                android:background="@color/white"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/link_game_6"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="18dp"
            android:onClick="viewGame">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/sports2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Fight Night Champion"
                android:textSize="18sp"
                android:textColor="@color/lime_500"
                android:background="@color/white"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <!-- End of Category 3 -->

</LinearLayout>