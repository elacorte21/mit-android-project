            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Crash is back in the driver’s seat! Get ready to go fur-throttle with Crash™ Team Racing Nitro-Fuelled. It’s the authentic CTR experience plus a whole lot more, now fully-remastered and revved up to the max." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
